<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.francescofricano.midichallenge">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.francescofricano.midichallenge.ui.login.SignUpActivity"
            android:label="@string/title_activity_sign_up" />
        <activity
            android:name="com.francescofricano.midichallenge.ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="com.francescofricano.midichallenge.EndGameActivity"
            android:label="@string/title_activity_end_game"/>
        <activity
            android:name="com.francescofricano.midichallenge.ClassicGameActivity"
            android:label="@string/title_activity_classic_game"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.francescofricano.midichallenge.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>